<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.abcde.cultureStay.messenger.MessengerDAO">
    <insert id="createChatRoom" parameterType="ChatRoom">
        INSERT INTO ChatRooms (chatRoomId, chatRoomName, createdUserId)
        VALUES (ChatRooms_seq.nextval, #{chatRoomName}, #{createdUserId})
    </insert>

    <select id="getChatRoomList" parameterType="String" resultType="ChatRoom">
        select * from chatrooms
    </select>

    <select id="getChatRoom" parameterType="int" resultType="ChatRoom">
        select * from chatrooms where chatRoomId = #{chatRoomId}
    </select>

    <select id="getMessages" parameterType="int" resultType="Message">
        select * from messages where chatRoomId = #{chatRoomId}
    </select>
</mapper>